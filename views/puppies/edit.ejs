<% include ../partials/header %>
<h1>Edit a new puppy</h1>
<form action="/puppies/<%= puppy.id%>?_method=PUT" method="POST">
  <div class="form-group">
    <label for="name">Name: </label>
    <input type="text" class="form-control" name="puppy[name]" id="name" value="<%= puppy.name%>" autofocus>
  </div>
  <div class="form-group">
    <label for="url">Image URL: </label>
    <input type="text" class="form-control" name="puppy[imageUrl]" id="url" value="<%= puppy.imageUrl%>">
  </div>
  <input type="submit" value="Edit" class="btn btn-lg btn-info">
</form>


<form action="/puppies/<%= puppy.id%>?_method=DELETE" method="POST">
    <input type="submit" value="X" class="btn btn-danger">
</form>
<% include ../partials/footer %>